{
  "name": "Chrome Angular extension with require.js",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "angular.js chrome extension with require.js",
  "icons": {
    "48": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/application.html#/popup",
    "default_title": "Extension action"
  },

  "background": {
    "page": "html/background.html"
  },
  "options_page": "html/application.html#/options",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "\u003Call_urls\u003E"
  ],
  "web_accessible_resources": [
    "js/*",
    "html/*",
    "css/*",
    "images/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/lib/require.js",
        "js/lib/jquery.js",
        "js/lib/underscore.js",
        "js/requireContent.js",
        "js/requireConfig.js",
        "js/content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
